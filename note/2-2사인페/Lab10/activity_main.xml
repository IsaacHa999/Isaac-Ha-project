<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/result_from_second_activity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="empty"/>
    <Button
        android:id="@+id/to_Dialog_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="empty result"/>

    <Button
        android:id="@+id/to_second_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to second activity"/>

    <Button
        android:id="@+id/to_second_activity_for_result_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to second activity for result"/>

    <EditText
        android:id="@+id/sample_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Input here."/>



</LinearLayout>